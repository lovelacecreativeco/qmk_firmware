# Build Options
BOOTMAGIC_ENABLE = no       # Disable Bootmagic
MOUSEKEY_ENABLE = no        # Disable Mouse Keys
EXTRAKEY_ENABLE = yes       # Enable Extra Keys (required for macros)
CONSOLE_ENABLE = no         # Disable Console (enable temporarily for debugging if needed)
COMMAND_ENABLE = no         # Disable Command feature
NKRO_ENABLE = yes           # Enable N-Key Rollover
OLED_ENABLE = yes           # Enable OLED Support
ENCODER_ENABLE = yes        # Enable Rotary Encoder Support
TAP_DANCE_ENABLE = no       # Not needed for this keymap
RGBLIGHT_ENABLE = yes
# MIDI Configuration
MIDI_ENABLE = yes           # Enable MIDI Features
MIDI_BASIC = yes            # Enable Basic MIDI support
MIDI_ADVANCED = yes         # Enable Advanced MIDI support

# Features
LTO_ENABLE = yes            # Enable Link Time Optimization
SLEEP_LED_ENABLE = no       # Disable Sleep LED (optional)
